Repo for my JavaScript library and code.

Typical usage:
<script src="js/Andy.js">
</script>
<script>
	var AU = Andy.Utils;
	AU.StartClock('AndyClock','dd mmm yy hh:nn');
	AU.$('noOfRows').firstChild.nodeValue = AU.$('amazon').rows.length-1;
	// 'noOfRows' is a SPAN displaying the number of rows (minus header)
	AU.HighlightRows('amazon','lightgray',true);
	AU.HighlightRows('table1','pink',false);
	AU.AddSortToTables();
	AU.AddSortByDate('amazon',4,'dd-mmm-yy');	// 4 is the col-index
	AU.AddSortByNumber('amazon',[5,6,7,8,9]);	// column indices
	AU.AddSortByNumber2('div3','p','span',1);	// sorting within div, p, span
</script>